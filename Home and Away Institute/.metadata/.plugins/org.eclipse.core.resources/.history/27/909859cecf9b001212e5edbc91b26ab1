private void jComboBox2ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jComboBox2ActionPerformed
defaultTableModel();


 

    try {
        if (jComboBox2.getSelectedIndex() == -1) {
            return;
        }
      
         extendedTestResult res = ((extendedTestResult)  jComboBox2.getSelectedItem());
        
        ArrayList< extendedTestResult> test =
                DatabaseLayer.LoadTestResults(user, null , res.getTestID());


            defaultTableModel();


            for (extendedTestResult item : test) {


                tableModel.addRow(new Object[]{item.getTestDate(), 
                    item.getStudentID(),
                            item.getFname(),
                            item.getLname(),
                            item.getCourseName(),
                            (item.getScore()*100 + "%"),
                            item.getRemarks()
                        });
            }


            jTable1.setModel(tableModel);

            

        } catch (Exception ex) {
            JOptionPane.showMessageDialog(this, ex);

        }

  
    
    

    
}//GEN-LAST:event_jComboBox2ActionPerformed

private void jComboBox1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jComboBox1ActionPerformed

   DefaultComboBoxModel m = new DefaultComboBoxModel();

    try {
        if (jComboBox1.getSelectedIndex() == -1) {
            return;
        }
      
        String code = ((customcombo) jComboBox1.getSelectedItem()).getValue();
        
        ArrayList< extendedTestResult> test =
                DatabaseLayer.LoadTestResults(user, code ,null);


            


            for (extendedTestResult item : test)
            {

                m.addElement(item);
               
            }



            

        } catch (Exception ex) {
            JOptionPane.showMessageDialog(this, ex);

        }

  
    jComboBox2.setModel(m);
jComboBox2ActionPerformed(evt);

}//GEN-LAST:event_jComboBox1ActionPerformed

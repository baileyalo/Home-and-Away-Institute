    public viewTestResult(LoggedInUser user) {
        initComponents();

        
        defaultTableModel();
        jComboBox2.setModel(new DefaultComboBoxModel());
        try 
        {
        
            this.user = user;

         

            ArrayList<CourseRecord> courses = DatabaseLayer.LoadTestCourses(user, null);
           
            UtilityClass.Populate(jComboBox1, courses);
            
            jComboBox1ActionPerformed(null);
            


        } catch (Exception ex) {
            JOptionPane.showMessageDialog(this, ex);
        }

    }

    
     void defaultTableModel() {
        Object[][] data = new Object[][]{};
        tableModel = new DefaultTableModel(data, new String[]{
                    "Test Date","Student ID","First Name","Last Name" ,"Course", "Score", "Remarks", 
                });
        jTable1.setModel(tableModel);

    }

    

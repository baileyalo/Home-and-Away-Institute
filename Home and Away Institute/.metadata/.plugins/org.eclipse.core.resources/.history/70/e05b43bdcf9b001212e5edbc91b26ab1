    @Action
    public void FinishTest() {

        if (CurrentQuestion + 1 < count) {
            int res = JOptionPane.showConfirmDialog(this, "Are you sure you wish to end the test prematurely");
            if (res != 0) {
                return;

            }

        }

        int correctCount = 0;

        int answerSize = Answers.size();
        for (int i = 0; i < count; i++) {


            if (i < answerSize) {
              
                if (questions.get(i).getAnswer().equalsIgnoreCase(Answers.get(i))) {

                    
                    correctCount++;
                }

            } else {
                break; //test incomplete
            }



        }
        float res = ((float)correctCount / (float)count);
   
        TestResult tr = new TestResult();
        
       
       
        tr.setScore(res);
        tr.setRemarks((res >= 0.5 ? "Pass" : "Fail"));

        try {
            DatabaseLayer.AddTestResult(tr, student.getIdNumber(), testrecord.getTestid());



            JOptionPane.showMessageDialog(this, "Test Complete\n" + "Your Score: " + (res*100) + "%");
            this.dispose();

        } catch (Exception ex) {

            JOptionPane.showMessageDialog(this, ex);

        }

    }

    @Action
    public void next() {


        if (CurrentQuestion > -1 && CurrentQuestion == Answers.size()) {
            JOptionPane.showMessageDialog(this, "Please Choose an answer");
            return;
        }
        CurrentQuestion++;
        showQuestion();
        jButton1.setEnabled((CurrentQuestion < count - 1));

    }

    /** Creates new form DoTest */
    public DoTest(StudentRecord student,
            TestRecord testrecord,
            ArrayList<Question> questions) {
        initComponents();

        count = questions.size();
        Answers = new ArrayList<String>(count);

        this.student = student;
        this.testrecord = testrecord;
        this.questions = questions;
        next();

    }

    void showQuestion() {


        int Current = CurrentQuestion;

        Question ques = questions.get(Current);
        buttonGroup1.clearSelection();


        jLabel4.setText(ques.getQuestion());


        jRadioButton1.setText(ques.getOptionA());
        jRadioButton2.setText(ques.getOptionB());
        jRadioButton3.setText(ques.getOptionC());
        jRadioButton4.setText(ques.getOptionD());

        jLabel3.setText((CurrentQuestion + 1) + "/" + questions.size());




    }

    void setAnswer(String answer) {
        Answers.add(CurrentQuestion, answer);


    }


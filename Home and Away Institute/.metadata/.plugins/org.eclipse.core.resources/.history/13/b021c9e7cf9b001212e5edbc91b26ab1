private void jComboBox1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jComboBox1ActionPerformed

    defaultTableModel();
}//GEN-LAST:event_jComboBox1ActionPerformed

    /**
     * @param args the command line arguments
     */
    @Action
    public void SetTest() {
        ArrayList<Question> questions = new ArrayList<Question>();
        try {


            int rows  = tableModel.getRowCount();
            for (int i = 0; i < rows; i++) {
                int id = (Integer) tableModel.getValueAt(i, 0);

                Question q = new Question();
                q.setQuestionid(id);
                questions.add(q);

            }
            if(rows == 0)
            {
              
              JOptionPane.showMessageDialog(this,"Cannot set a test with no Question!");  
                return;
            }


              java.sql.Date date = java.sql.Date.valueOf(jTextField1.getText().trim());
            
                      
                      DatabaseLayer.setTest(questions, CurrentStaff.getID_Number(),
                    date,((customcombo)jComboBox1.getSelectedItem()).getValue());

            JOptionPane.showMessageDialog(this, "Test Added Successfully");

        }
        
        catch (Exception ex) {
            JOptionPane.showMessageDialog(this, ex);
        }

        jButton2.setEnabled(false);
    }

    void defaultTableModel() {
        Object[][] data = new Object[][]{};
        tableModel = new DefaultTableModel(data, new String[]{
                    "ID", "Question", "Option A", "Option B", "Option C", "Option D", "Answer"
                });
        jTable1.setModel(tableModel);

    }

    @Action
    public void generateTest() {
        try {

            String CourseCode = ((customcombo) jComboBox1.getSelectedItem()).value;
            ArrayList<Question> questions = DatabaseLayer.getQuestions(CourseCode);



            defaultTableModel();


            for (Question item : questions) {


                tableModel.addRow(new Object[]{item.getQuestionid(), item.getQuestion(),
                            item.getOptionA(),
                            item.getOptionB(),
                            item.getOptionC(),
                            item.getOptionD(),
                            item.getAnswer()
                        });
            }


            jTable1.setModel(tableModel);

            jButton2.setEnabled(true);

        } catch (Exception ex) {
            JOptionPane.showMessageDialog(this, ex);

        }


    }
